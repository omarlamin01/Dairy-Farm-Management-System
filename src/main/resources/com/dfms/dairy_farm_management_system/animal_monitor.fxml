<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<ScrollPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dfms.dairy_farm_management_system.controllers.AnimalMonitorController">
    <content>
        <VBox minHeight="-Infinity" minWidth="-Infinity" styleClass="main_content"
              stylesheets="@../../../style/style.css">
            <children>
                <Label styleClass="header" text="Animal Monitor" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      nodeOrientation="LEFT_TO_RIGHT">
                    <children>
                        <Rectangle arcHeight="5.0" fill="#72ed12" height="3.0" layoutX="-1.0" layoutY="6.0"
                                   stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" styleClass="rectangle"
                                   width="500.0"/>
                        <Rectangle arcHeight="5.0" fill="#72ed12" height="14.0" layoutX="26.0" stroke="BLACK"
                                   strokeType="INSIDE" strokeWidth="0.0" styleClass="rectangle" width="14.0"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Pane>
                <Label styleClass="sub_header" text="Monitor your animals here" textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Health Status">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                        <Tab text="Cow Pregnancy">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                        <Tab text="Vaccine Monitor">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </content>
    <stylesheets>
        <URL value="@../../../style/style.css"/>
        <URL value="@../../../style/table_view.css"/>
    </stylesheets>
</ScrollPane>
