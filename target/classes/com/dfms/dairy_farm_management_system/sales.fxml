                                   <Insets left="10.0" />
                               </padding>
                           </TextField>
                           <Button fx:id="search_btn" mnemonicParsing="false" styleClass="btn-search">
                               <graphic>
                                   <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <Image url="@../../../icons/search.png" />
